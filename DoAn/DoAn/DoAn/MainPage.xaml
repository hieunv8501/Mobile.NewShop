            <view:DanhMuc />
        </x:Arguments>
    </NavigationPage>
    <NavigationPage IconImageSource="IconTimKiem.png" Title="Tìm Kiếm">
        <x:Arguments>
            <view:TimKiem/>
        </x:Arguments>
    </NavigationPage>
    <NavigationPage IconImageSource="IconGioHang.png" Title="Giỏ hàng">
        <x:Arguments>
            <view:GioHang/>
        </x:Arguments>
    </NavigationPage>
    <NavigationPage IconImageSource="IconTaiKhoan.png" Title="Tài khoản">
        <x:Arguments>
            <view:TaiKhoan />
        </x:Arguments>
