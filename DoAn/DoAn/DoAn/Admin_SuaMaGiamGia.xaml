<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DoAn.Admin_SuaMaGiamGia"
             Title="Sửa mã giảm giá">
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="lbMaGiamGia" FontSize="24" TextColor="Black" HorizontalOptions="Center" FontAttributes="Bold" Margin="10"></Label>
            <Label Text="Tỉ lệ giảm giá (%):" FontSize="24" TextColor="Black" Margin="10,0,0,0"></Label>
            <Entry x:Name="TiLeGiamGia" Keyboard="Numeric" MaxLength="2" FontSize="24" Margin="10,0,10,0"></Entry>
            <Button x:Name="btnSave"  Clicked="btnSave_Clicked" Text="Lưu" BackgroundColor="Red" Margin="10,50,10,10" FontSize="24" TextColor="White"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>