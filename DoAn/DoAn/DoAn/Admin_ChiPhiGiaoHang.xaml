<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DoAn.Admin_ChiPhiGiaoHang"
             Title="Chi phí giao hàng">
    <ContentPage.Content>
        <StackLayout>

            <Grid Padding="20, 5, 20, 5" BackgroundColor="White">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"></RowDefinition>
                    <RowDefinition Height="50"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Label Text="Giá tiền giao hàng" FontSize="24" TextColor="Black" VerticalOptions="Center" FontAttributes="Bold" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2"></Label>
                <Entry x:Name="lbGia" FontSize="24" VerticalOptions="Center" TextColor="Red" Grid.Column="0" Grid.Row="1"></Entry>
                <Button x:Name="btnSuaChiPhiGiao" Clicked="btnSuaChiPhiGiao_Clicked" Text="Sửa" BackgroundColor="Orange" CornerRadius="10" FontSize="20" Margin="90,4,0,4" Grid.Row="1" Grid.Column="1"></Button>
            </Grid>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>